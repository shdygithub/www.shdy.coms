<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--个人中心常用条目控件(无icon)-->
    <declare-styleable name="LabelIndicatorView">
        <attr name="label_title" format="string"/>
        <attr name="label_tips" format="string"/>
        <attr name="label_Indicator" format="reference"/>
    </declare-styleable>

    <!--自定义隐藏/显示密码的的EditText-->
    <declare-styleable name="HidePwEditText">
        <attr name="hideDrawable" format="reference"/>
        <attr name="showDrawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ColorTrackTabViewIndicator">
        <attr name="ctTabSelectedTextColor" format="color"/>
        <attr name="ctTabIndicatorColor" format="color"/>
        <attr name="ctTabTextColor" format="color"/>
        <attr name="ctTabTextSize" format="dimension"/>
        <attr name="ctTabWidth" format="dimension"/>
        <attr name="ctTabGravity" format="enum">
            <enum name="Grivity_Fill" value="0"/>
            <enum name="Grivity_Center" value="1"/>
        </attr>

        <attr name="ctMode">
            <enum name="scrollable" value="0"/>
            <enum name="fixed" value="1"/>
        </attr>

    </declare-styleable>

    <declare-styleable name="ColorTrackView">
        <attr name="ctvText" format="string"/>
        <attr name="ctvText_size" format="dimension"/>
        <attr name="ctvText_origin_color" format="color"/>
        <attr name="ctvText_change_color" format="color"/>
        <attr name="ctvProgress" format="float"/>
        <attr name="ctvDirection" format="integer"/>
    </declare-styleable>



    <!--顶部悬停控件-->
    <declare-styleable name="StickNavLayout">
        <!--默认是否悬停tab-->
        <attr name="isStickNav" format="boolean"/>
        <!--距离悬浮的位置-->
        <attr name="stickOffset" format="dimension"/>
    </declare-styleable>


    <!--************ CustomTitleBar ***********-->
    <declare-styleable name="CustomTitlebar">
        <attr name="title_background" format="color"/>
        <attr name="left_button_image" format="reference"/>
        <attr name="left_button_text" format="string"/>
        <attr name="left_button_textColor" format="color"/>
        <attr name="left_button_textSize" format="dimension"/>
        <attr name="title_text" format="string"/>
        <attr name="title_textColor" format="color"/>
        <attr name="title_textSize" format="dimension"/>
        <attr name="right_button_image" format="reference"/>
        <attr name="right_button_text" format="string"/>
        <attr name="right_button_textColor" format="color"/>
        <attr name="right_button_textSize" format="dimension"/>
        <attr name="show_line" format="boolean"/>
    </declare-styleable>



</resources>