<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linears"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.viewUi.activity.home_ui.AnswerActivity">


    <com.kongzue.titlebar.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorTitle"
        app:gravity="center"
        app:noBackButton="false"
        app:rightButtonImage="@mipmap/icon_home_search_black"
        app:statusBarTransparent="true"
        app:title="问答专区" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- 横向列表 -->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/tab_top_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- viewpager区域，配合Fragment使用，且不能滑动 -->
            <www.shdy.widget.MyCustomViewPager
                android:id="@+id/vp_tab"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>


        <com.jude.easyrecyclerview.EasyRecyclerView
            android:visibility="gone"
            android:id="@+id/mRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:scrollbarStyle="insideOverlay"
            app:scrollbars="none">

        </com.jude.easyrecyclerview.EasyRecyclerView>

        <Button
            android:id="@+id/bianji_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="40dp"
            android:background="@mipmap/bianji" />

    </RelativeLayout>


</LinearLayout>