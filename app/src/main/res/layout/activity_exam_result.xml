<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.viewUi.activity.exam_ui.ExamResultActivity">


    <com.kongzue.titlebar.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FF2F8DE7"
        app:gravity="center"
        app:noBackButton="true"
        app:statusBarTransparent="true"
        app:title="测试结果" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/result_ground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:text="正确率"
            android:textColor="#ffffffff"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/baifenbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:text=""
            android:textColor="#ffffffff"
            android:textSize="68sp" />


        <TextView
            android:id="@+id/top_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="148dp"
            android:text=""
            android:textColor="#ffffffff"
            android:textSize="13sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/all_exam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="#ff333333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/no_exam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="#ff333333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/off_exam"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="#ff333333"
                android:textSize="13sp" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="错题都记录在错题库了呦！记得要反复练习"
            android:textColor="#ff333333"
            android:textSize="13sp" />


        <Button
            android:id="@+id/fenxiang_btn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="95dp"
            android:background="@drawable/main_btn_shape"
            android:text="分享"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <Button
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="95dp"
            android:background="@drawable/main_btn_shape"
            android:text="再来一次"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/back_btn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="95dp"
            android:background="@drawable/main_btn_shape"
            android:text="返回题库"
            android:textColor="@color/white"
            android:textSize="15sp" />


    </LinearLayout>
</LinearLayout>