<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linears"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.viewUi.activity.me_ui.TicketRecordItemActivity">

    <com.kongzue.titlebar.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorTitle"
        app:gravity="center"
        app:noBackButton="false"

        app:statusBarTransparent="true"
        app:title="发票详情" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="发票类型"
                android:textColor="#ff333333"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/ticket_item_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="#ff333333"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="#f0f0f0"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="发票抬头"
                android:textColor="#ff333333"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/ticket_item_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint=" "
                android:textColor="#FF333333"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="#f0f0f0"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="纳税人识别号"
                android:textColor="#ff333333"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/ticket_item_code"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint=" "
                android:textColor="#FF333333"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="#f0f0f0"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="电话"
                android:textColor="#ff333333"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/ticket_item_phone"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FF333333"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="#f0f0f0"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="电子邮箱"
                android:textColor="#ff333333"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/ticket_item_emal"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FF333333"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="#f0f0f0"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="发票金额"
                android:textColor="#ff333333"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/ticket_item_money"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FF333333"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/ticket_item_count"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:text="共包含 3 笔订单"
        android:textColor="#ff999999"
        android:textSize="14sp" />

    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/mRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:scrollbarStyle="insideOverlay"
        app:scrollbars="none">

    </com.jude.easyrecyclerview.EasyRecyclerView>


</LinearLayout>