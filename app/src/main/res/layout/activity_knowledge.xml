<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linears"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.viewUi.activity.home_ui.KnowledgeActivity">


    <com.kongzue.titlebar.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorTitle"
        app:gravity="center"
        app:noBackButton="false"
        app:statusBarTransparent="true"
        app:title="知识专栏" />

    <!-- 横向列表 -->
    <android.support.v7.widget.RecyclerView
         android:id="@+id/tab_top_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- viewpager区域，配合Fragment使用，且不能滑动 -->
    <www.shdy.widget.MyCustomViewPager
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/home_shape"
        android:id="@+id/vp_tab"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <com.jude.easyrecyclerview.EasyRecyclerView
        android:visibility="gone"
        app:scrollbarStyle="insideOverlay"
        app:scrollbars="none"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:id="@+id/Recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/home_shape">

    </com.jude.easyrecyclerview.EasyRecyclerView>


</LinearLayout>