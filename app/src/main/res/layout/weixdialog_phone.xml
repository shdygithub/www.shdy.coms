<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="250dp">

    <RelativeLayout

        android:layout_centerVertical="true"
        android:background="@drawable/dialog_selects"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">





        <ImageView
            android:id="@+id/image_dimess"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@mipmap/error_icon" />

    <TextView
        android:textSize="17sp"
        android:text="绑定手机号让您的账号更安全"
        android:textColor="#ff5fa05b"
        android:id="@+id/text_view"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/image_dimess"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          />







        <Button
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/text_view"
            android:id="@+id/btn"
            android:background="@drawable/code_grren"
            android:text="去绑定"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="40dp" />


    </RelativeLayout>
</RelativeLayout>