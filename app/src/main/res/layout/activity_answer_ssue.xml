<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linears"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".mvp.viewUi.activity.home_ui.AnswerSsueActivity">


    <com.kongzue.titlebar.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorTitle"
        app:gravity="center"
        app:noBackButton="false"
        app:statusBarTransparent="true"
        app:title="问答发布" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/home_shape"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:hint="来说点什么吧！"
            android:textColor="#000000"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginRight="15dp">


            <RelativeLayout
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/Relative"
                android:visibility="visible"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/add_image"
                    android:layout_width="86dp"
                    android:layout_height="89dp" />

                <ImageView
                    android:id="@+id/dlete_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:background="@mipmap/dlete_image"
                    android:visibility="gone" />

            </RelativeLayout>

            <ImageView
                android:paddingBottom="10dp"
                android:layout_gravity="center"
                android:id="@+id/image"
                android:layout_width="86dp"
                android:layout_height="89dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp" />


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/main_btn_shape"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="15sp" />

</LinearLayout>