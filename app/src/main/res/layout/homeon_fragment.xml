<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/tools"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:background="@color/color_008cf0"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <!-- 横向列表 -->
    <android.support.v7.widget.RecyclerView
        android:background="@color/color_008cf0"
        android:id="@+id/tab_top_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- viewpager区域，配合Fragment使用，且不能滑动 -->
    <www.shdy.widget.MyCustomViewPager
        android:id="@+id/vp_tab"
        android:layout_width="match_parent"
        android:layout_height="0dp" />



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:orientation="vertical">





                <com.stx.xhb.xbanner.XBanner
                    android:id="@+id/xbanner"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    app:AutoPlayTime="2500"
                    app:isShowIndicatorOnlyOne="false"
                    app:isShowNumberIndicator="false"
                    app:pageChangeDuration="500"
                    app:pointNormal="@drawable/normal"
                    app:pointSelect="@drawable/select"
                    app:pointTopBottomPadding="20dp"
                    app:pointsContainerBackground="#00000000"
                    app:pointsPosition="CENTER"
                    app:pointsVisibility="true"
                    app:tipTextSize="12sp" />


                <include layout="@layout/home_search_layout"></include>
                <android.support.v7.widget.RecyclerView
                    android:background="@mipmap/baikuangz"
                    android:visibility="gone"
                    android:id="@+id/recy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="190dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/home_shape"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">


                    <LinearLayout
                        android:id="@+id/linear_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/home_one_organ_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/home_one_class_image2" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/home_one_question_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:background="@mipmap/home_one_class_image1" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/home_one_knowledge_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:background="@mipmap/home_one_class_image3" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/home_one_integral_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:background="@mipmap/home_one_class_image4" />
                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear_icon"
                        android:gravity="center">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="机构介绍"
                            android:textColor="@color/text_black"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="问答专区"
                            android:textColor="@color/text_black"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="知识专栏"
                            android:textColor="@color/text_black"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="积分商城"
                            android:textColor="@color/text_black"
                            android:textSize="13sp" />


                    </LinearLayout>

                </RelativeLayout>
            </RelativeLayout>


            <com.jude.easyrecyclerview.EasyRecyclerView
                android:id="@+id/Recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:scrollbarStyle="insideOverlay"
                app:scrollbars="none">

            </com.jude.easyrecyclerview.EasyRecyclerView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>